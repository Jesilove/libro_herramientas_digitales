   <?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="esquema_prueba.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>

<TEI xmlns="http://www.tei-c.org/ns/1.0"> <!-- Elemento raíz -->
